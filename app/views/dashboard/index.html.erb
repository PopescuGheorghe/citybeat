<div class="navbar-fixed">
  <nav>
    <div class="nav-wrapper">
      <a href="#" class="brand-logo" id="logo">
        <%= image_tag("logo-white.png", size: "100x53", alt: "Logo") %>
      </a>
      <ul class="right hide-on-med-and-down">
        <li><a href="#" data-activates="slide-out" class="advanced-search"><i class="material-icons">search</i></a></li>
      </ul>
      <ul id="nav-mobile" class="right hide-on-med-and-down">
      </ul>
    </div>
  </nav>
</div>
  <body>
    <div class="container">
      <div class="row">
        <br>
        <br>
        <ul id="slide-out" class="side-nav">
          <div class="container">
            <div class="row">
              <div class="col s12">
              <h5>Advanced Search</h5>
              <br>
              <%= search_form_for @search, url: dashboard_index_path do |f| %>

                <%= f.label :title_cont %>
                <%= f.search_field :title_cont %>

                <%= f.label :status_cont%>
                <%= f.search_field :status_cont %>

                <%= f.label :description_cont%>
                <%= f.search_field :description_cont %>

                <%= f.label :project_type_cont%>
                <%= f.search_field :project_type_cont %>

                <%= f.label :created_at_gteq%>
                <%= f.date_field :created_at_gteq, data:{ provide:'datepicker' } %>

                <%= f.label :updated_at_gteq%>
                <%= f.date_field :updated_at_gteq, data:{ provide:'datepicker' } %>
                <br>
                <br>
                <%= f.submit  class: 'btn' %>
                <%= link_to "Clear Search", dashboard_index_path, class:"btn  default" %>
              <% end %>
              </div>
            </div>
          </div>
        </ul>
          <div class="col s4">
          <% @top_projects.each do |tp|%>
            <div class="card horizontal">
              <div class="card-stacked">
                <div class="card-content">
                  <p><%=  tp.title %></p>
                </div>
                <div class="card-action">
                  <a href=<%= tp.description.scan( /href='([^>]*)'/)[0][0]%>>Event Details </a>
                </div>
              </div>
            </div>
            <%end%>
          </div>
        <% if @projects.any?%>
        <div id="projects" class="col s8 right">
          <%= render @projects %>
          <div class="infinite-scrolling col s8">
            <%= will_paginate @projects %>
          </div>
        </div>
        <%else%>
        <div class="col s8">
        <p class="center"> there are no projects </p>
        <br>
        <br>
        <br>
        </div>
        <%end%>
      </div>
    </body>
